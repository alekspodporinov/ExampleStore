@using System.Web.Mvc.Html
@using Store.WebUI.Models
@helper PageLinks(System.Web.Mvc.HtmlHelper h, PagingInfo pagingInfo, string currentCategory)
{
    for (int i = 1; i <= pagingInfo.TotalPages; i++)
    {

        if (i == pagingInfo.CurrentPage)
        {

            @h.ActionLink(@i.ToString(), "List", "Game", new {category = currentCategory, page = i}, new {@class = "btn btn-primary" })
            continue;
        }
        @h.ActionLink(@i.ToString(), "List", "Game", new { category = currentCategory, page = i }, new {@class = "btn btn-default"})
    }
}
